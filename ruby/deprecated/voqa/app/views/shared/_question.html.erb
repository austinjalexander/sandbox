<div>
  <div class="col-sm-8">
    <span class='h4'><%= question.title %></span>
    <p><%= truncate(question.content, length: 80) %></p>
  </div>

  <div class="col-sm-2">
    <small class=''>
      Asked <%= time_ago_in_words(question.created_at) %> ago
      <br /> 
      <%= @answers.where(question_id: question.id).count %> Answers
    </small>
  </div>

  <div class="col-sm-2">
    <small class=''>
      <figure>
        <%= image_tag(gravatar_for(question.user.email) + "?s=50", class: "img-circle small_circle", options: { alt: "#{question.user.email} Gravatar" }) %>
        <figcaption><strong><%= question.user.username %></strong></figcaption>
      </figure>
    </small>
  </div>

</div>



