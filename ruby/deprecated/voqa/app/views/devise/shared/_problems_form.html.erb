<div id="problems_form-container" class="account_form row">
  <div id="problems_form" class="well col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4">

    <%= form_for(resource, as: resource_name, url: url, html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
        <legend><%= form_message %></legend>

        <div class="form-group col-xs-12 has-feedback">
          <div class="input-group">
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
            </span>
            <%= f.email_field :email, autocomplete: "off", class: "form-control", placeholder: "email" %>
          </div>
        </div>

        <div class="form-group col-xs-12">
          <%= f.submit "Submit", 
                class: "btn btn-default" %>
        </div>
      </fieldset>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
